// --- Data Models (could be in a separate data package) ---
data class UserProfile(
    val name: String,
    val balance: Double,
    val avatarUrl: String? = null
)

data class Task(
    val id: String,
    val title: String,
    val description: String,
    val rewardPoints: Int,
    val iconResId: Int? = null, // Using Int for simplicity, could be URL or ImageVector
    val backgroundColor: Color = Color.LightGray.copy(alpha = 0.2f)
)

data class ActivityItem(
    val id: String,
    val description: String,
    val points: Int,
    val timestamp: Long
)

// --- Backend Simulation (could be in a separate repository package) ---
interface EarnzyRepository {
    suspend fun fetchUserProfile(): UserProfile
    suspend fun fetchTasks(): List<Task>
    suspend fun fetchRecentActivity(): List<ActivityItem>
}

class MockEarnzyRepository : EarnzyRepository {
    override suspend fun fetchUserProfile(): UserProfile {
        delay(1000) // Simulate network delay
        return UserProfile("John Doe", 1250.75, "https://example.com/avatar.jpg")
    }

    override suspend fun fetchTasks(): List<Task> {
        delay(1500)
        return listOf(
            Task("1", "Complete Survey", "Share your opinions and earn quick points!", 50, null, Color(0xFFFDD835)), // Yellow
            Task("2", "Watch Video Ad", "Watch a short video and earn easy points.", 10, null, Color(0xFF8BC34A)), // Green
            Task("3", "Install & Review App", "Try out new apps for big rewards!", 200, null, Color(0xFF2196F3)), // Blue
            Task("4", "Refer a Friend", "Invite friends to Earnzy and earn a bonus!", 150, null, Color(0xFFFF9800)), // Orange
            Task("5", "Daily Login Bonus", "Login daily to claim your reward!", 5, null, Color(0xFF9C27B0)),  // Purple
            Task("6", "Play Mini-Game", "Have fun and earn while playing games.", 30, null, Color(0xFFEC407A)) // Pink
        )
    }

    override suspend fun fetchRecentActivity(): List<ActivityItem> {
        delay(800)
        return listOf(
            ActivityItem("act1", "Completed Survey #123", 50, System.currentTimeMillis() - 3600000),
            ActivityItem("act2", "Watched Ad", 10, System.currentTimeMillis() - 7200000),
            ActivityItem("act3", "Daily Bonus", 5, System.currentTimeMillis() - 10800000),
            ActivityItem("act4", "Installed 'Cool App'", 200, System.currentTimeMillis() - 14400000)
        )
    }
}

// --- ViewModel (could be in a separate viewmodel package) ---
class HomeViewModel(private val repository: EarnzyRepository = MockEarnzyRepository()) : ViewModel() {

    private val _userProfile = MutableStateFlow<UserProfile?>(null)
    val userProfile: StateFlow<UserProfile?> = _userProfile

    private val _tasks = MutableStateFlow<List<Task>>(emptyList())
    val tasks: StateFlow<List<Task>> = _tasks

    private val _recentActivity = MutableStateFlow<List<ActivityItem>>(emptyList())
    val recentActivity: StateFlow<List<ActivityItem>> = _recentActivity

    private val _isLoading = MutableStateFlow(false)
    val isLoading: StateFlow<Boolean> = _isLoading

    private val _error = MutableStateFlow<String?>(null)
    val error: StateFlow<String?> = _error

    init {
        loadHomeScreenData()
    }

    fun loadHomeScreenData(forceRefresh: Boolean = false) {
        if (_isLoading.value && !forceRefresh) return

        viewModelScope.launch {
            _isLoading.value = true
            _error.value = null
            try {
                // Fetch all data concurrently
                val profileDeferred = launch { _userProfile.value = repository.fetchUserProfile() }
                val tasksDeferred = launch { _tasks.value = repository.fetchTasks() }
                val activityDeferred = launch { _recentActivity.value = repository.fetchRecentActivity() }

                profileDeferred.join()
                tasksDeferred.join()
                activityDeferred.join()

            } catch (e: Exception) {
                _error.value = "Failed to load data: ${e.localizedMessage ?: "Unknown error"}"
            } finally {
                _isLoading.value = false
            }
        }
    }
}

// --- HomeFragment ---
class HomeFragment : Fragment() {

    override fun onCreateView(
        inflater: LayoutInflater,
        container: ViewGroup?,
        savedInstanceState: Bundle?
    ): View {
        return ComposeView(requireContext()).apply {
            setContent {
                EarnzyTheme {
                    val navController = findNavController()
                    HomeScreen(navController = navController)
                }
            }
        }
    }
}

// --- Composables for HomeScreen ---

@OptIn(ExperimentalMaterial3Api::class, ExperimentalFoundationApi::class, ExperimentalLayoutApi::class)
@Composable
fun HomeScreen(navController: NavController, viewModel: HomeViewModel = viewModel()) {
    val userProfile by viewModel.userProfile.collectAsState()
    val tasks by viewModel.tasks.collectAsState()
    val recentActivity by viewModel.recentActivity.collectAsState()
    val isLoading by viewModel.isLoading.collectAsState()
    val error by viewModel.error.collectAsState()

    val swipeRefreshState = rememberSwipeRefreshState(isRefreshing = isLoading)

    Scaffold(
        topBar = {
            HomeAppBar(userProfile = userProfile) {
                // Handle profile click, e.g., navigate to profile screen
                // navController.navigate(R.id.action_homeFragment_to_profileFragment)
            }
        }
    ) { paddingValues ->
        SwipeRefresh(
            state = swipeRefreshState,
            onRefresh = { viewModel.loadHomeScreenData(forceRefresh = true) },
            modifier = Modifier
                .padding(paddingValues)
                .fillMaxSize()
        ) {
            LazyColumn(
                modifier = Modifier
                    .fillMaxSize()
                    .background(MaterialTheme.colorScheme.background)
            ) {
                item {
                    Spacer(modifier = Modifier.height(16.dp))

                    // User Balance Card with animation
                    AnimatedContent(
                        targetState = userProfile,
                        transitionSpec = {
                            if (targetState != null) {
                                slideInVertically(animationSpec = tween(durationMillis = 500)) { height -> height } + fadeIn(animationSpec = tween(durationMillis = 500)) with
                                        slideOutVertically(animationSpec = tween(durationMillis = 500)) { height -> -height } + fadeOut(animationSpec = tween(durationMillis = 500))
                            } else {
                                fadeIn() with fadeOut()
                            }
                        }, label = "balance_card_animation"
                    ) { profile ->
                        if (profile != null) {
                            BalanceCard(profile = profile)
                        } else if (isLoading) {
                            LoadingBalanceCard() // A skeleton loader
                        } else {
                            // Optionally show an error or placeholder if no profile and not loading
                            Box(
                                modifier = Modifier
                                    .fillMaxWidth()
                                    .padding(horizontal = 16.dp, vertical = 8.dp)
                                    .height(120.dp)
                                    .background(MaterialTheme.colorScheme.surfaceVariant, RoundedCornerShape(20.dp)),
                                contentAlignment = Alignment.Center
                            ) {
                                Text("Could not load balance.", color = MaterialTheme.colorScheme.onSurfaceVariant)
                            }
                        }
                    }

                    // Quick Actions Section
                    QuickActionsSection(navController = navController)

                    // Task Section
                    AnimatedVisibility(
                        visible = tasks.isNotEmpty(),
                        enter = expandVertically(animationSpec = spring(dampingRatio = Spring.DampingRatioMediumBouncy, stiffness = Spring.StiffnessLow)) + fadeIn(),
                        exit = shrinkVertally() + fadeOut()
                    ) {
                        Column {
                            SectionHeader(title = "Earn & Explore")
                            TasksGrid(tasks = tasks) { task ->
                                // Handle task click, e.g., navigate to task detail
                                // navController.navigate(R.id.action_homeFragment_to_taskDetailFragment, bundleOf("taskId" to task.id))
                            }
                        }
                    }
                    AnimatedVisibility(
                        visible = tasks.isEmpty() && !isLoading && error == null,
                        enter = expandVertically() + fadeIn(),
                        exit = shrinkVertically() + fadeOut()
                    ) {
                        Box(
                            modifier = Modifier
                                .fillMaxWidth()
                                .padding(16.dp),
                            contentAlignment = Alignment.Center
                        ) {
                            Text("No tasks available right now. Check back later!", color = MaterialTheme.colorScheme.onSurfaceVariant)
                        }
                    }


                    // Recent Activity Section
                    AnimatedVisibility(
                        visible = recentActivity.isNotEmpty(),
                        enter = expandVertically(animationSpec = spring(dampingRatio = Spring.DampingRatioMediumBouncy, stiffness = Spring.StiffnessLow)) + fadeIn(),
                        exit = shrinkVertically() + fadeOut()
                    ) {
                        Column {
                            SectionHeader(title = "Recent Activity")
                            RecentActivityList(activityItems = recentActivity)
                        }
                    }
                    AnimatedVisibility(
                        visible = recentActivity.isEmpty() && !isLoading && error == null,
                        enter = expandVertically() + fadeIn(),
                        exit = shrinkVertically() + fadeOut()
                    ) {
                        Box(
                            modifier = Modifier
                                .fillMaxWidth()
                                .padding(16.dp),
                            contentAlignment = Alignment.Center
                        ) {
                            Text("No recent activity.", color = MaterialTheme.colorScheme.onSurfaceVariant)
                        }
                    }

                    // Error display
                    error?.let {
                        Text(
                            text = it,
                            color = MaterialTheme.colorScheme.error,
                            modifier = Modifier
                                .fillMaxWidth()
                                .padding(16.dp),
                            textAlign = TextAlign.Center
                        )
                    }

                    Spacer(modifier = Modifier.height(24.dp))
                }
            }
        }
    }
}

@OptIn(ExperimentalMaterial3Api::class)
@Composable
fun HomeAppBar(userProfile: UserProfile?, onProfileClick: () -> Unit) {
    TopAppBar(
        title = {
            Text(
                text = "Earnzy",
                style = MaterialTheme.typography.headlineMedium,
                fontWeight = FontWeight.Bold,
                color = MaterialTheme.colorScheme.onSurface
            )
        },
        actions = {
            IconButton(onClick = { /* Handle notifications click */ }) {
                Icon(Icons.Default.Notifications, contentDescription = "Notifications")
            }
            if (userProfile != null) {
                IconButton(onClick = onProfileClick) {
                    // In a real app, use Coil/Glide for image loading from avatarUrl
                    Icon(Icons.Default.AccountCircle, contentDescription = "Profile", modifier = Modifier.size(32.dp))
                }
            } else {
                // Placeholder for profile
                CircularProgressIndicator(modifier = Modifier.size(32.dp), strokeWidth = 2.dp)
            }
        },
        colors = TopAppBarDefaults.topAppBarColors(
            containerColor = MaterialTheme.colorScheme.surface,
            titleContentColor = MaterialTheme.colorScheme.onSurface,
            actionIconContentColor = MaterialTheme.colorScheme.onSurfaceVariant
        )
    )
}

@Composable
fun BalanceCard(profile: UserProfile) {
    Card(
        shape = RoundedCornerShape(20.dp),
        colors = CardDefaults.cardColors(containerColor = Color.Transparent),
        elevation = CardDefaults.cardElevation(0.dp),
        modifier = Modifier
            .fillMaxWidth()
            .padding(horizontal = 16.dp, vertical = 8.dp)
    ) {
        Box(
            modifier = Modifier
                .fillMaxWidth()
                .background(
                    brush = Brush.horizontalGradient(
                        colors = listOf(MaterialTheme.colorScheme.primary, MaterialTheme.colorScheme.primaryContainer)
                    ),
                    shape = RoundedCornerShape(20.dp)
                )
                .padding(20.dp)
        ) {
            Column {
                Text(
                    text = "Current Balance",
                    style = MaterialTheme.typography.labelMedium,
                    color = MaterialTheme.colorScheme.onPrimary.copy(alpha = 0.8f)
                )
                Spacer(modifier = Modifier.height(4.dp))
                Text(
                    text = "$${String.format("%.2f", profile.balance)}",
                    style = MaterialTheme.typography.headlineLarge,
                    fontWeight = FontWeight.ExtraBold,
                    color = MaterialTheme.colorScheme.onPrimary
                )
                Spacer(modifier = Modifier.height(16.dp))
                // Can add more features like a daily goal progress bar or recent points animation
            }
        }
    }
}

@Composable
fun LoadingBalanceCard() {
    Card(
        shape = RoundedCornerShape(20.dp),
        colors = CardDefaults.cardColors(containerColor = Color.Transparent),
        elevation = CardDefaults.cardElevation(0.dp),
        modifier = Modifier
            .fillMaxWidth()
            .padding(horizontal = 16.dp, vertical = 8.dp)
    ) {
        Box(
            modifier = Modifier
                .fillMaxWidth()
                .background(
                    color = MaterialTheme.colorScheme.surfaceVariant.copy(alpha = 0.5f),
                    shape = RoundedCornerShape(20.dp)
                )
                .padding(20.dp)
        ) {
            Column {
                val infiniteTransition = rememberInfiniteTransition(label = "shimmer_transition")
                val animatedValue by infiniteTransition.animateFloat(
                    initialValue = 0f,
                    targetValue = 1f,
                    animationSpec = infiniteRepeatable(
                        animation = tween(durationMillis = 1000, easing = LinearEasing),
                        repeatMode = RepeatMode.Reverse
                    ), label = "shimmer_animation"
                )
                val shimmerBrush = Brush.horizontalGradient(
                    colors = listOf(
                        MaterialTheme.colorScheme.surfaceVariant.copy(alpha = 0.3f),
                        MaterialTheme.colorScheme.surfaceVariant.copy(alpha = 0.7f),
                        MaterialTheme.colorScheme.surfaceVariant.copy(alpha = 0.3f)
                    ),
                    startX = 0f,
                    endX = animatedValue * 1000f
                )

                Spacer(modifier = Modifier.height(10.dp))
                Box(
                    modifier = Modifier
                        .width(120.dp)
                        .height(20.dp)
                        .clip(RoundedCornerShape(4.dp))
                        .background(shimmerBrush)
                )
                Spacer(modifier = Modifier.height(8.dp))
                Box(
                    modifier = Modifier
                        .width(200.dp)
                        .height(30.dp)
                        .clip(RoundedCornerShape(4.dp))
                        .background(shimmerBrush)
                )
                Spacer(modifier = Modifier.height(16.dp))
            }
        }
    }
}

