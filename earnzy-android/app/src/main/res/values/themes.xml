<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Earnzy" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorError">@color/error</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorForeground">@color/on_surface</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorAccent">@color/secondary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
    </style>

    <style name="Theme.Earnzy.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorError">@color/error</item>
        <item name="android:colorBackground">@color/dark_bg</item>
        <item name="android:colorForeground">@color/white</item>
        <item name="android:statusBarColor">@color/dark_bg</item>
        <item name="android:navigationBarColor">@color/dark_surface</item>
    </style>

    <!-- Card Style -->
    <style name="EarnzyCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <!-- Button Style -->
    <style name="EarnzyButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Text Styles -->
    <style name="EarnzyText.Display">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="EarnzyText.Headline">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="EarnzyText.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="EarnzyText.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="EarnzyText.Label">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/on_surface_variant</item>
    </style>
</resources>
