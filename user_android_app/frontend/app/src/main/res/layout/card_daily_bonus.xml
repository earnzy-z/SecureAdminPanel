<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_daily_bonus_bg"
    android:padding="20dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/daily_bonus_animation"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_rawRes="@raw/daily_bonus"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <LinearLayout
        android:id="@+id/bonus_info_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/daily_bonus_animation"
        app:layout_constraintEnd_toStartOf="@id/claim_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/bonus_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Bonus"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/bonus_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Claim your reward!"
            android:textSize="13sp"
            android:textColor="#E0FFFFFF"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/claim_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Claim"
        android:textColor="@color/daily_bonus_bg"
        android:backgroundTint="@color/white"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:elevation="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
