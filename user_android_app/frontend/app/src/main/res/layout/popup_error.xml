<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/dialog_background">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_error_animation"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/error_animation" />
        <!-- NOTE: Make sure you have 'error_animation.json' in your 'res/raw' folder. -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Something Went Wrong"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="An unexpected error occurred. Please try again."
        android:textAlignment="center"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retry"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tv_close_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close App"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/darker_gray"/>

</LinearLayout>