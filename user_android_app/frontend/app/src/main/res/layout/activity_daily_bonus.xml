<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/glass_white">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:title="Daily Bonus"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:titleTextColor="@color/text_primary" />

    <!-- Main Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Bonus Lottie Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/bonus_animation"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/loader"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />

        <!-- Bonus Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bonus_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/glass_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp">

                <!-- Streak Text -->
                <TextView
                    android:id="@+id/streak_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥ 0 Day Streak"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <!-- Bonus Amount Text -->
                <TextView
                    android:id="@+id/bonus_amount_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+0 Coins"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/gradient_start"
                    android:layout_marginTop="8dp" />

                <!-- Next Claim Text -->
                <TextView
                    android:id="@+id/next_claim_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Come back tomorrow for more!"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

                <!-- Loading Progress -->
                <ProgressBar
                    android:id="@+id/loading_progress"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:visibility="gone" />

                <!-- Claim Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/claim_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Claim Now"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/gradient_start"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppins_medium" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>
