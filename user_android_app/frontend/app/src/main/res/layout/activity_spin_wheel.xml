<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/glass_white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:title="Spin and Win"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:titleTextColor="@color/text_primary" />

    <LinearLayout
        android:id="@+id/spin_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- ðŸŽ¡ Wheel Image -->
        <ImageView
            android:id="@+id/spin_wheel_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/ic_spin"
            android:contentDescription="Spin Wheel" />

        <!-- â³ Loading Progress -->
        <ProgressBar
            android:id="@+id/loading_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:indeterminate="true" />

        <!-- ðŸŒ€ Reward Animation (optional Lottie) -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/reward_animation"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:visibility="gone"
            app:lottie_rawRes="@raw/confetti"
            app:lottie_autoPlay="false"
            app:lottie_loop="false" />

        <!-- ðŸŽ¯ Spin Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/spin_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Spin Now"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/gradient_start" />

        <!-- ðŸ”„ Remaining Spins -->
        <TextView
            android:id="@+id/spins_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 spins remaining today"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</LinearLayout>
