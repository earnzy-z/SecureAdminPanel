<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_scratch_card">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_button_scratch"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:src="@drawable/ic_arrow_back"
        android:tint="@color/white"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Title -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/scratch_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scratch and Win"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Instructions -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scratch the card to reveal your prize!"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:alpha="0.9"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/scratch_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Cards Available -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cards_available_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#40FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/instructions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_card"
                android:tint="@color/white" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cards_remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Cards Left"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Scratch Card Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/scratch_card_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        app:layout_constraintTop_toBottomOf="@id/cards_available_badge"
        app:layout_constraintBottom_toTopOf="@id/reveal_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.45">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_scratch_card_back">

            <!-- Hidden Prize (Revealed after scratching) -->
            <LinearLayout
                android:id="@+id/prize_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/prize_animation"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:lottie_rawRes="@raw/coin"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You Won!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginTop="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_coin" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/prize_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Scratch Overlay (Custom View will be added programmatically) -->
            <FrameLayout
                android:id="@+id/scratch_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/scratch_card_overlay"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Scratch Icon Hint -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:lottie_rawRes="@raw/scratch_hint"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scratch Here!"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </FrameLayout>

            <!-- Progress Indicator -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/scratch_progress"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_margin="8dp"
                app:indicatorColor="@color/white"
                app:trackColor="#40FFFFFF"
                app:trackCornerRadius="3dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Scratch Progress Text -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/scratch_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0% Scratched"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:alpha="0.8"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/scratch_card_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Reveal Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/reveal_button"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:text="Reveal Prize"
        android:textColor="@color/white"
        app:strokeColor="@color/white"
        app:cornerRadius="28dp"
        app:icon="@drawable/ic_eye"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/claim_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Claim Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/claim_button"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:text="CLAIM PRIZE"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/warning"
        app:cornerRadius="32dp"
        app:elevation="12dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Celebration Overlay -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/celebration_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:lottie_rawRes="@raw/reward_celebration"
        app:lottie_loop="false" />

</androidx.constraintlayout.widget.ConstraintLayout>
