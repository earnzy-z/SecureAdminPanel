<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- CardView for the frosted glass effect -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#E6FFFFFF"> <!-- 90% Opacity White (Cooling Glass) -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Lottie Animation for the popup icon -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/popup_lottie_animation"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

            <TextView
                android:id="@+id/popup_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Connection Issue"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1a1a1a" />

            <TextView
                android:id="@+id/popup_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Please check your connection and try again."
                android:textAlignment="center"
                android:textColor="#616161"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"/>

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:text="Retry"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>