<?xml version="1.0" encoding="utf-8"?>
<!-- Multi-layer shadow for depth -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow layer 1 - Deepest -->
    <item android:top="8dp" android:left="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#15000000"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
    
    <!-- Shadow layer 2 - Middle -->
    <item android:top="4dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
    
    <!-- Shadow layer 3 - Closest -->
    <item android:top="2dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#30000000"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
    
</layer-list>
